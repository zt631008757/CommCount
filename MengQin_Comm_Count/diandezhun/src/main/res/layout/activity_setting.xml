<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <include layout="@layout/layout_public_title"></include>

    <com.android.baselibrary.view.MultiStateView
        android:id="@+id/multiplestatusView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:msv_emptyView="@layout/view_public_empty"
        app:msv_errorView="@layout/view_public_error_view"
        app:msv_loadingView="@layout/view_public_loading_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <com.android.baselibrary.view.Comm_TitleView
                android:id="@+id/ctv_qingchuhuancun"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:tv_imgSrc="@drawable/ico_setting_clear"
                app:tv_showArr="true"
                app:tv_titleName="清除缓存" />

            <com.android.baselibrary.view.Comm_TitleView
                android:id="@+id/ctv_cunchiweizhi"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:tv_imgSrc="@drawable/ico_setting_imgeaddress"
                app:tv_showArr="true"
                app:tv_titleName="照片表单存储位置" />

            <com.android.baselibrary.view.Comm_TitleView
                android:id="@+id/ctv_zhezhaotoumingdu"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:tv_imgSrc="@drawable/ico_setting_imgeaddress"
                app:tv_showArr="true"
                app:tv_titleName="遮罩透明度调整" />

        </LinearLayout>
    </com.android.baselibrary.view.MultiStateView>
</LinearLayout>