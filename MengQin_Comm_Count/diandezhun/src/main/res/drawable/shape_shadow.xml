<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边 -->
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="4px"
                android:left="2px"
                android:right="2px"
