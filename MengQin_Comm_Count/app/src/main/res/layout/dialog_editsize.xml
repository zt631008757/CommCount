<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dialog_bg_color"></View>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#c000"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_jian"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ico_count_editsize_jian"></ImageView>

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:max="100"
                android:maxHeight="5dp"
                android:min="0"
                android:minHeight="5dp"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar_seekbar_camare"
                android:thumb="@drawable/shape_seekbar_hand"></SeekBar>

            <ImageView
                android:id="@+id/iv_jia"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ico_count_editsize_jia"></ImageView>

            <ImageView
                android:id="@+id/iv_color"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/ico_count_editsize_color"></ImageView>

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="17dp"
                android:src="@drawable/ico_commcount_btn_back"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_jian1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ico_count_editsize_jian1"></ImageView>

            <SeekBar
                android:id="@+id/seekbar1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:max="100"
                android:maxHeight="5dp"
                android:min="0"
                android:minHeight="5dp"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar_seekbar_camare"
                android:thumb="@drawable/shape_seekbar_hand"></SeekBar>

            <ImageView
                android:id="@+id/iv_jia1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ico_count_editsize_jia1"></ImageView>

            <ImageView
                android:id="@+id/iv_shape_circle"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/ico_count_editsize_shape_circle"></ImageView>

            <ImageView
                android:id="@+id/iv_shape_jiahao"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="27dp"
                android:src="@drawable/ico_count_editsize_shape_jiahao"></ImageView>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>