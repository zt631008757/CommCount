<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_control_top"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_circle_3fff"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_editbg_jian"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/ico_count_edit_size_jian"></ImageView>

            <SeekBar
                android:id="@+id/seekbar_circle_size"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:max="10"
                android:maxHeight="5dp"
                android:min="0"
                android:minHeight="5dp"
                android:progress="5"
                android:progressDrawable="@drawable/progressbar_seekbar_count_control"
                android:thumb="@drawable/shape_seekbar_hand1"
                android:thumbOffset="0dip"></SeekBar>

            <ImageView
                android:id="@+id/iv_editbg_jia"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/ico_count_edit_size_jia"></ImageView>
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_control_bottom"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_circle_3fff"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_editfillter_jian"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/ico_count_editfillter_jian"></ImageView>

            <SeekBar
                android:id="@+id/seekbar_circle_fillter"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:max="100"
                android:maxHeight="5dp"
                android:min="0"
                android:minHeight="5dp"
                android:progress="50"
                android:progressDrawable="@drawable/progressbar_seekbar_count_control"
                android:thumb="@drawable/shape_seekbar_hand1"
                android:thumbOffset="0dip"></SeekBar>

            <ImageView
                android:id="@+id/iv_editfillter_jia"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/ico_count_editfillter_jia"></ImageView>
        </LinearLayout>

    </RelativeLayout>

    <!--右边-->
    <RelativeLayout
        android:id="@+id/rl_control_right"
        android:layout_width="30dp"
        android:layout_height="355dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <View
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_circle_3fff"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_edit_bgcolor_jia"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:src="@drawable/ico_count_edit_bg_jia"></ImageView>

            <com.jaygoo.widget.VerticalRangeSeekBar
                android:id="@+id/vertical_seekbar"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:layout_margin="0dp"
                android:layout_weight="1"
                app:rsb_max="200"
                app:rsb_min="0"
                app:rsb_mode="single"
                app:rsb_progress_color="#9000"
                app:rsb_progress_default_color="#2000"
                app:rsb_progress_height="5dp"
                app:rsb_thumb_inactivated_drawable="@drawable/shape_seekbar_hand1"
                app:rsb_thumb_size="20dp" />

            <ImageView
                android:id="@+id/iv_edit_bgcolor_jian"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:src="@drawable/ico_count_edit_bg_jian"></ImageView>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_shape_style"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="42dp"
        android:padding="5dp"
        android:src="@drawable/ico_count_editsize_shape_circle" />
</RelativeLayout>